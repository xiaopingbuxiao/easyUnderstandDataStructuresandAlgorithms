{
  "configurations": [
  {
    "type": "node",
    "request": "launch",
    "name": "Mocha Tests",
    "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
    "args": [
      "--require",
      "@babel/register",
      // "-u",
      // "tdd",
      "--watch",
      "--timeout",
      "999999",
      "--colors",
      "${workspaceFolder}/test/index.js"
    ],
    "internalConsoleOptions": "openOnSessionStart",
    "skipFiles": [
      "<node_internals>/**"
    ]
  }
  ]
}